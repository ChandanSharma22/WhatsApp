<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".WhatsAppApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_whatsapp_icon"
        android:label="WhatsApp"
        android:supportsRtl="true"
        android:theme="@style/Theme.WhatsApp"
        tools:targetApi="31">
        <activity
            android:name=".Activities.Group_Chat_Activity"
            android:exported="false" />

        <activity
            android:name=".Activities.ChatDetailActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.SetupProfileActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.OtpVerifyActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.SendOtpActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.MainActivity"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>